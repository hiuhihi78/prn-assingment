
@{
    ViewData["Title"] = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-7">
            <h2 class="text-center">Products</h2>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Price</th>
                        <th scope="col">Discount</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Product product in ViewBag.products)
                    {
                        <tr>
                            <td scope="row">@product.Name</td>
                            <td scope="row">@product.Quantity</td>
                            <td scope="row">@product.Price</td>
                            <td scope="row">@product.Discount%</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="col-md-5">
            <h2 class="text-center">Customer's Info</h2>
            <div>
                <form action="DoCheckout" method="Post">

                    <div class="form-group">
                        <label for="exampleInputEmail1">Full name</label>
                        <input type="text" class="form-control" name="name" aria-describedby="emailHelp" placeholder="Enter full name">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Phone</label>
                        <input type="tel" class="form-control" name="phone" aria-describedby="emailHelp" placeholder="Enter phone">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Address</label>
                        <input type="text" class="form-control" name="address" aria-describedby="emailHelp" placeholder="Enter address">
                    </div>

                    <input type="hidden" name="totalPrice" value="@ViewBag.TotalPrice" />

                    <h3 class="m-t-10 m-b-10">Total: @ViewBag.TotalPrice VND</h3>

                    <button type="submit" class="btn btn-primary">Chechout</button>
                </form>
            </div>
        </div>
    </div>
</div>

